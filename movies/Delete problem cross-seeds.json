{
  "name": "Delete: problem cross-seeds",
  "trackerPattern": "*",
  "trackerDomains": [
    "*"
  ],
  "conditions": {
    "schemaVersion": "1",
    "delete": {
      "enabled": true,
      "mode": "deleteWithFilesPreserveCrossSeeds",
      "condition": {
        "operator": "AND",
        "conditions": [
          {
            "field": "CATEGORY",
            "operator": "EQUAL",
            "value": "cross-seed"
          },
          {
            "field": "STATE",
            "operator": "NOT_EQUAL",
            "value": "tracker_down"
          },
          {
            "field": "ADDED_ON_AGE",
            "operator": "GREATER_THAN",
            "value": "3600"
          },
          {
            "operator": "OR",
            "conditions": [
              {
                "field": "STATE",
                "operator": "EQUAL",
                "value": "missingFiles"
              },
              {
                "field": "STATE",
                "operator": "EQUAL",
                "value": "errored"
              },
              {
                "field": "STATE",
                "operator": "EQUAL",
                "value": "stalled_downloading"
              },
              {
                "field": "STATE",
                "operator": "EQUAL",
                "value": "stopped"
              }
            ]
          }
        ]
      }
    }
  },
  "intervalSeconds": 3600
}
